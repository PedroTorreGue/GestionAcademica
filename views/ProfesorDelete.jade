extends layout

block content
  h2 Listado de profesores:
  div(class='well')
    form(method='post')
        table
                tr
                    td(class="col-xs-11")
                        h2 Listado de profesores:
                    td(class="col-xs-1")
                        button(type='submit' class='btn btn-danger') Borrar selecci√≥n
        table(class='table table-fixed')
            thead
                tr

                    th(class="col-xs-1") ID
                    th(class="col-xs-2") Nombre
                    th(class="col-xs-4") Apellido
                    th(class="col-xs-4") email
                    th(class="col-xs-1")
            tbody
                each profesor, i in profesorList
                    tr(id='prof'+i)
                        td(class="col-xs-1") #{profesor.id}    
                        td(class="col-xs-2") #{profesor.nombre}  
                        td(class="col-xs-4") #{profesor.apellido}
                        td(class="col-xs-4") #{profesor.email}
                        td(class="col-xs-1") 
                            input(type='checkbox' name='id' id='checkP'+i value="#{profesor._id}" onclick="borrarP("+i+")")
               

                            